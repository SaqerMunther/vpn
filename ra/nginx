    }

    # EAB API route

    location /eab/_next/static/ {
   	alias /data/apps/dig-dashboard/frontend/.next/static/;
        expires 1d;
        access_log off;
    }

    location /eab {
	rewrite ^/eab/(.*)$ /$1 break;
        proxy_pass http://127.0.0.1:3003/;  # EAB frontend
    }


    location /digital/eab {
	rewrite ^/eab/(.*)$ /$1 break;
